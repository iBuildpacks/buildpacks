#!/usr/bin/env bash

set -eo pipefail

if [[ ! -f requirements.txt ]]; then
  exit 1
elif [[ -f ${PROJECT_CONSTANT} ]]; then
  language=$(jq ".language.name" ${PROJECT_CONSTANT} | tr -d '"' | tr -d '[:space:]' | tr '[:upper:]' '[:lower:]')
  if [[ ${language} != "python" ]]; then
    exit 1;
  fi
fi
